{
	"compilerOptions": {
		"target": "es2020",
		"useDefineForClassFields": false,
		"module": "es2020",
		"skipLibCheck": true,
		/* Bundler mode */
		"moduleResolution": "bundler",
		"allowImportingTsExtensions": true,
		"verbatimModuleSyntax": true,
		"moduleDetection": "force",
		"noEmit": true,
		/* Linting */
		"strict": true,
		"noUnusedLocals": false,
		"noUnusedParameters": true,
		"erasableSyntaxOnly": false,
		"noFallthroughCasesInSwitch": true,
		"noUncheckedSideEffectImports": true,
		"allowJs": true,
		"checkJs": false,
		"declaration": true
	},
	"include": [
		"src",
		"/usr/share/mixxx/controllers/common-controller-scripts.js",
		"/usr/share/mixxx/controllers/common-hid-packet-parser.js",
		// "/usr/share/mixxx/controllers/engine-api.d.ts",
		"../mixxx/res/controllers/engine-api.d.ts",
		"../mixxx/res/controllers/mixxx-controls.d.ts",
		// -------------------------------------------
		"../mixxx/res/controllers/script-api.d.ts",
		"/usr/share/mixxx/controllers/color-mapper-api.d.ts",
		"/usr/share/mixxx/controllers/console-api.d.ts",
		"/usr/share/mixxx/controllers/hid-controller-api.d.ts"
	]
}
